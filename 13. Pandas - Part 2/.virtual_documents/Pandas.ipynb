# Merging & Joining Data:

# Sample DataFrames
df1 = pd.DataFrame({
    "id": [1, 2, 3],
    "name": ["Amit", "Balu", "Chirag"]
})

df2 = pd.DataFrame({
    "id": [2, 3, 4],
    "score": [85, 90, 75]
})

print("DF1:\n", df1, "\n")
print("DF2:\n", df2, "\n")

# INNER JOIN
inner = pd.merge(df1, df2, how="inner", on="id")
print("INNER JOIN:\n", inner, "\n")

# LEFT JOIN
left = pd.merge(df1, df2, how="left", on="id")
print("LEFT JOIN:\n", left, "\n")

# RIGHT JOIN
right = pd.merge(df1, df2, how="right", on="id")
print("RIGHT JOIN:\n", right, "\n")

# OUTER JOIN
outer = pd.merge(df1, df2, how="outer", on="id")
print("OUTER JOIN:\n", outer)






# Data Concatenation with Pandas:

# 1. Vertical concatenation
df1 = pd.DataFrame({"id": [1, 2], "name": ["A", "B"]})
df2 = pd.DataFrame({"id": [3, 4], "name": ["C", "D"]})
vertical = pd.concat([df1, df2], axis=0, ignore_index=True)

# 2. Horizontal concatenation
df3 = pd.DataFrame({"age": [21, 22]})
df4 = pd.DataFrame({"city": ["Delhi", "Mumbai"]})
horizontal = pd.concat([df3, df4], axis=1)

# 3. Different columns
df5 = pd.DataFrame({"id": [1, 2], "A": [10, 20]})
df6 = pd.DataFrame({"id": [3, 4], "B": [30, 40]})
different_cols = pd.concat([df5, df6], axis=0, ignore_index=True)

# 4. Concatenation with keys
with_keys = pd.concat([df1, df2], keys=["Group1", "Group2"])

# 5. Column-wise keys
col_keys = pd.concat([df3, df4], axis=1, keys=["AgeInfo", "Location"])

# 6. Inner join concatenation
inner_join = pd.concat([df5, df6], join="inner")

# 7. Concatenate Series with DataFrame
s = pd.Series([100, 200], name="score")
series_concat = pd.concat([df1, s], axis=1)

print("Vertical:\n", vertical, "\n")
print("Horizontal:\n", horizontal, "\n")
print("Different Columns:\n", different_cols, "\n")
print("Keys:\n", with_keys, "\n")
print("Column Keys:\n", col_keys, "\n")
print("Inner Join:\n", inner_join, "\n")
print("Series + DataFrame:\n", series_concat, "\n")




